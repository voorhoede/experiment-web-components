{
    "parser": "babel-eslint",
    "plugins": ["react"],
    "extends": ["airbnb-base", "plugin:react/recommended"],
    "settings": {
        "react": {
            "version": "16.0"
        }
    },
    "env": {
        "browser": true
    },
    "rules": {
        "indent": [2, 2],
        "camelcase": 0,
        "no-control-regex": 0,
        "no-return-assign": 0,
        "no-underscore-dangle": 0,
        "no-param-reassign": 0,
        "no-use-before-define": [2, { "functions": false }],
        "no-shadow": 0,
        "class-methods-use-this": 0,
        "global-require": 0,
        "no-unused-vars": 1,
        "no-unused-expressions": 1,
        "no-unused-labels": 1,
        "import/no-unresolved": 0,
        "max-len": 0,
        "react/no-unescaped-entities": 0,
        "no-plusplus": 0,
        "react/prop-types": 1,
        "operator-linebreak": 0
    }
}
